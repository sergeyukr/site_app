<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div style="margin-left:10%">
  <label style="float:left; margin-right:25px; margin-bottom:25px">Заголовок</label>
  <div ><%= f.text_field :name %></div>
  <div style="clear:both"/>
  <label style="float:left; margin-right:45px; margin-bottom:25px">Статья</label>
  <div style="float:left; margin-bottom:25px"><%= f.text_area :content %></div>
  <div style="clear:both"/>
  <label style="float:left; margin-right:20px; margin-bottom:25px">Категория</label>
  <div><%= select(:article, :categoriy, [["", ""],["Общее", "Общее"],["Политика", "Политика"], ["Спорт", "Спорт"], ["Культура", "Культура"]]) %></div>
</div>
<div style="margin:30px; margin-left:14%">
  <%= f.submit 'Сохранить'%>
  <%= button_to_function "Отмена", "history.back()" %>
</div>
<% end %>
